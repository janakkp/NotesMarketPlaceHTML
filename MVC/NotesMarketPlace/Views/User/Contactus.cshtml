@model NotesMarketPlace.Models.contactus

@{
    ViewBag.Title = "Contactus";
}

@using (Html.BeginForm("Contactus", "User", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div id="contact-us">
        <section id="banner">
            <div id="banner-heading">
                <h1>Contact Us</h1>
            </div>
            @if (ViewBag.Success != null)
            {
                <p class="error" style="text-align:center;">  @ViewBag.Success</p>
            }
        </section>
        <section id="contactus1">
            <div class="container">
                <h2>Get in Touch</h2>
                <h6>Let us Know how to get back to you</h6>
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Full Name *</label>
                            <div>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email Address *</label>
                            <div>
                                @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Subject *</label>
                            <div>
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Comments / Questions *</label>
                            <div>
                                <textarea name="Comment" rows=8 placeholder="comments"></textarea>
                                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="contactus-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <button id="button" class="submit">SUBMIT</button>
                    </div>
                </div>
            </div>
        </section>
    </div>

}


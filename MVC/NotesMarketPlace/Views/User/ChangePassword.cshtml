@model NotesMarketPlace.Models.Changepassword

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatibility" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">


<!-- title -->
<title>Notes - Market Place</title>

<!-- Favicon-for icon if website title -->
<link rel="shortcut icon" href="~/img/favicon.ico">

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,700;1,600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
@Styles.Render("~/Content/css")
<style>
    .error {
        color: red;
    }
</style>
</head>
<body>
    <div class="background">

        <div class="background">
            <form id="login-form" class="changepassword"  method="post">
                <div class="logo">
                    <img src="~/img/top-logo.png">
                </div>
                <div class="form">
                    <h1>Change Password</h1>
                    <p>Enter your new password to change your password</p>
                    @if (ViewBag.message != null)
                    {
                        <p class="error" style="text-align:center;">  @ViewBag.message</p>
                    }
                    <div class="form-group">
                        <label>Old Password</label>
                        <div>
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @id = "oldpassword", @type = "password" } })
                            <span toggle="#password-field" class="fa fa-fw field-icon toggle-password" onclick="oldpassword()"><img src="~/img/eye.png" style="margin-left:-15px;" /></span>
                       @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "error" })
                         </div>
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <div>
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @id = "newpassword", @type = "password" } })
                            <span toggle="#password-field" class="fa fa-fw field-icon toggle-password" onclick="newpassword()"><img src="~/img/eye.png" style="margin-left:-15px;" /></span>
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <div>
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "confirmpassword", @type = "password" } })
                            <span toggle="#password-field" class="fa fa-fw field-icon toggle-password" onclick="confirmpassword()"><img src="~/img/eye.png" style="margin-left:-15px;" /></span>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "error" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">SUBMIT</button>
                </div>
            </form>

        </div>
        @Scripts.Render("~/bundles/bootstrap")
</body>

</html>

 
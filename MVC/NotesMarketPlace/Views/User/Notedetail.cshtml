@model NotesMarketPlace.Models.Notedetail

@{
    ViewBag.Title = "Notedetail";
}
<!-- End header -->
<div id="note-detail">
    

    @foreach (var item in ViewBag.data as IEnumerable<NotesMarketPlace.Models.Notedetail>)
    {
        <section id="note-detail-1">
            <div class="container border-bottom">
                <h3>Notes Detail</h3>
                <div class="row">
                    <div class="col-md-7 col-sm-9 col-xs-12" id="left">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4 image">
                                <img src="@Url.Content(item.sellernotelist.DisplayPicture)" />
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8 detail">
                                <h2>@item.sellernotelist.Title</h2>
                                <h4>@item.categorylist.Name</h4>
                                <p>@item.sellernotelist.Description</p>
                                <button id="button" type="submit" onclick="openthankspopup()">DOWNLOAD/$15</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-8 col-xs-9" id="right">
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-4 left">Institution:</div>
                            <div class="col-md-7 col-sm-7 col-xs-8 right">@item.sellernotelist.UniversityName</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5 left">Country:</div>
                            <div class="col-md-7 col-sm-7 col-xs-7 right">@item.countrylist.Name</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5 left">Course Name:</div>
                            <div class="col-md-7 col-sm-7 col-xs-7 right">@item.sellernotelist.Course</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5 left">Course Code:</div>
                            <div class="col-md-7 col-sm-7 col-xs-7 right">@item.sellernotelist.CourseCode</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5 left">Professor:</div>
                            <div class="col-md-7 col-sm-7 col-xs-7 right">@item.sellernotelist.Professor</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-6 left">Number of Pages:</div>
                            <div class="col-md-7 col-sm-7 col-xs-6 right">@item.sellernotelist.NumberOfPages</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5 left">Approved Date:</div>
                            <div class="col-md-7 col-sm-7 col-xs-7 right">@item.sellernotelist.PublishedDate</div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-4 left">Rating:</div>
                            <div class="col-md-7 col-sm-7 col-xs-8 right">
                                <div class='rating-stars'>
                                    <ul id='stars'>
                                        @{ var a = ViewBag.average;
                                            for (int i = 1; i <= a; i++)
                                            {
                                                <li class='star' title='Poor' data-value='1'>
                                                    <img src="~/img/star.png" style="width:12px; height:12px;">
                                                </li>
                                            }
                                            for (var i = a; i < 5; i++)
                                            {
                                                <li class='star' title='Poor' data-value='1'>
                                                    <img src="~/img/star-white.png" style="width:12px; height:12px;">
                                                </li>
                                            }}@ViewBag.count Reviews
                                        </ul>
                                    </div>


                                </div>
                            </div>
                            <p class="red">5 users marked this note as inappropriate.</p>
                        </div>
                    </div>
                </div>
            </section>
        }
    <section id="note-detail-2">
        <div class="container iframe">
            <div class="row">
                @foreach (var item in ViewBag.data as IEnumerable<NotesMarketPlace.Models.Notedetail>)
                {
                    <div class="col-md-5 col-sm-6 col-xs-12">
                        <h3>Notes Preview</h3>
                        <iframe src="@Url.Content(item.sellernotelist.NotesPreview)"></iframe>
                    </div>
                }
                <div class="col-md-7 col-sm-6 col-xs-12 right">
                    <h3>Customer Reviews</h3>
                    <div id="customers">
                        @foreach (var item2 in ViewBag.data2 as IEnumerable<NotesMarketPlace.Models.Notedetail>)
                        {
                            var a = @item2.reviewlist.Ratings;
                            <!-- Review 01 -->
                            <div class="row border-bottom">
                                <div class="col-md-2 col-sm-2 col-xs-2 image">
                                    <img src="~/img/reviewer-1.png" alt="team member">
                                </div>
                                <div class="col-md-10 col-sm-10 col-xs-10 name">
                                    <h4>@item2.userlist.FirstName @item2.userlist.LastName</h4>
                                    <div class='rating-stars'>
                                        <ul id='stars'>
                                            @for (var i = 1; i <= a; i++)
                                            {
                                                <li class='star' title='Poor' data-value='1'>
                                                    <img src="~/img/star.png" style="width:12px; height:12px;">
                                                </li>
                                            }
                                            @for (var i = a; i < 5; i++)
                                            {
                                                <li class='star' title='Poor' data-value='1'>
                                                    <img src="~/img/star-white.png" style="width:12px; height:12px;">
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <p>@item2.reviewlist.Comments</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<form id="thanks-popup">
    <div class="head">
        <img class="close" src="~/img/close.png" onclick="location.href='@Url.Action("mailnotedetail", "User", new { id = @ViewBag.noteid })'" />
        <img src="~/img/SUCCESS.png">
        <h2 class="modal-title">Thank you for purchasing!</h2>
    </div>
    <div class="body">
        <h4>Dear @ViewBag.username ,</h4>
        <p>As this is paid notes - you need to pay to seller @ViewBag.sellername @ViewBag.sellerlastname Offline. We will send him an email that you want to download this note. he may contact you further for payment process completion.</p><p>In case, you have urgency,<br>Please contact us on +9195377734595.</p>
        <p>once he receives the payment and acknowledge us - selected notes you can see over my downloads tab for download.</p>
        <p>Have a good day.</p>

    </div>
</form>

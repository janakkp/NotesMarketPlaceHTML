    <style>
        .userimg {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-top: -5px;
        }
        #unpublish-popup {
            position: fixed;
            left: 50%;
            top: 100px;
            position: absolute;
            -webkit-transform: translate3d(-50%, 0, 0);
            transform: translate3d(-50%, 0, 0);
            margin: auto;
            width: 420px;
            background-color: #fff;
            padding: 30px;
            display: none;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,.2);
        }
        #unpublish-popup .close {
                position: fixed;
                font-size: 25px;
                top: 10px;
                right: 10px;
        }

        #unpublish-popup .close:hover {
                    color: #6255a5;
        }
            #unpublish-popup h2 {
                font-size:20px;
                font-weight:600;
            }
            #unpublish-popup .textbox {
                width: 100%;
                height: 35px;
                border: 1px solid lightgray;
                border-radius: 4px;
                margin-bottom: 20px;
            }
            #unpublish-popup .textarea {
                width: 100%;
                border: 1px solid lightgray;
                margin-bottom: 20px;
            }
            #unpublish-popup label{
                font-weight:400;
                margin:0;
                padding:0;
            }
            #unpublish-popup button, #unpublish-popup .reject, #unpublish-popup .cencel{
                background-color: #6255a5;
                width: 100px;
                height: 35px;
                color: white;
                border: none;
                margin: 0 10px;
            }
            #unpublish-popup .reject{background-color:red;}
            #unpublish-popup .cencel {background-color: lightgray;}
            #unpublish-popup h2 {color:#6255a5;}
    </style>
</head>


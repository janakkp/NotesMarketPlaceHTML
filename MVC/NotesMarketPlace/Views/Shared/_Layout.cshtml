<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatibility" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- title -->
    <title>Notes - Market Place</title>

    <!-- Favicon-for icon if website title -->
    <link rel="shortcut icon" href="~/img/favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,700;1,600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <style>
        .addbutton {
            float: right;
            margin: 0;
            height: 40px;
            padding: 10px 8px;
            width: 100px;
            font-family: "Open Sans", sans-serif;
            background-color: #6255a5;
            font-weight: 600;
            border: none;
            border-radius: 3px;
            color: #fff;
            text-decoration: none;
            font-size: 16px;
        }

            .addbutton:hover {
                text-decoration: none;
                background-color: #6255a5;
                color: #fff;
            }
    </style>

</head>

<body data-spy="scroll" data-target=".navbar" data-offset="65">
    <div class="content">
        <!-- header -->
        <header>
            <nav class="navbar navbar-fixed-top">
                <div class="container-fluid">
                    <div class="site-nav-wrapper">
                        <div class="navbar-header">
                            <!-- Mobile Menu Open Button -->
                            <span id="mobile-nav-open-btn">&#9776;</span>
                            <!-- Logo -->
                            <a href="#home" class="navbar-brand"><img src="~/img/" alt="logo"></a>
                        </div>
                        <!-- Main Menu -->
                        <div class="container">
                            <div class="collapse navbar-collapse">
                                <img class="sample" src="~/img/logo.png" alt="logo">
                                <ul class="nav navbar-nav pull-right">
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Searchnote","User")">Search Notes</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Addnote","User")">Sell Your Notes </a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("BuyerRequest","User")">Buyer Reuests</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Faqs","User")">FAQ</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Contactus","User")">Contact Us</a></li>
                                    <li><a class="smooth-scroll" href="#"><img src="~/img/user-img.png"></a></li>
                                    <li><a class="smooth-scroll" href="#"><button id="logout">Logout</button></a></li>
                                </ul>
                            </div>
                        </div>

                        <!-- Mobile Menu -->
                        <div id="mobile-nav">
                            <!-- Mobile Menu Close Button -->
                            <img id="mobile-nav-logo" src="~/img/logo.png" alt="logo">
                            <span id="mobile-nav-close-btn">&times;</span>
                            <div id="mobile-nav-content">
                                <ul class="nav">
                                    <li><a class="smooth-scroll a1" href="#">Search Notes</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Addnote","User")">Sell Your Notes </a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("BuyerRequest","User")">Buyer Reuests</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Faqs","User")">FAQ</a></li>
                                    <li><a class="smooth-scroll a1" href="@Url.Action("Contactus","User")">Contact Us</a></li>
                                    <li><a class="smooth-scroll" href="#"><img src="~/img/user-img.png"></a></li>
                                    <li><a class="smooth-scroll" href="#"><button id="logout">Logout</button></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!-- End header -->
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-sm-9 col-xs-8">
                    <p>Copyright &copy; Tatvasoft All Rights Reserved.</p>
                </div>
                <div class="col-md-2 col-sm-3 col-xs-4">
                    <ul class="social-list">
                        <li><a href="#"><img src="~/img/facebook.png"></a></li>
                        <li><a href="#"><img src="~/img/twitter.png"></a></li>
                        <li><a href="#"><img src="~/img/linkedin.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

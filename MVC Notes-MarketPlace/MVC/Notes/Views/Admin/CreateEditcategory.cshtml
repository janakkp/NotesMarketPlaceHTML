@model Notes.NoteCategory

@{
    ViewBag.Title = "CreateEditcategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("CreateEditcategory", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <section id="add-category">
        <div class="container">
            <h1>Add Category</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <div class="row">
                <div class="col-md-6 col-sm-9 col-xs-12">
                    <div class="form-group">
                        <label>Type Name*</label>
                        <div>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter category name" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description *</label>
                        <div>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter category name", @style = "height:100px;" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="submit" type="submit">SUBMIT</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
}